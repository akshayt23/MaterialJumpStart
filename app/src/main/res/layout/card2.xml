<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_card2"
    cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginLeft="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_card2_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Contact"
            android:textColor="@color/primary"
            android:textSize="18sp" />

        <View
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_card2_header"
            android:background="#dddddd" />

        <RelativeLayout
            android:layout_below="@id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_card2_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="221B, \nBaker Street"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_card2_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_card2_details"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:paddingTop="8dp"
                android:singleLine="false"
                android:text="9876543210"
                android:textSize="15sp" />

            <com.andexert.library.RippleView
                rv_centered="true"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                card_view:rv_color="@color/md_grey_700"
                card_view:rv_rippleDuration="170"
                card_view:rv_type="rectangle">

                <ImageButton
                    android:id="@+id/ib_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_call_green_24dp"
                    android:background="@android:color/transparent"/>
            </com.andexert.library.RippleView>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>