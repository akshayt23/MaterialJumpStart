<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rubberduck.materialjumpstart" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.rubberduck.materialjumpstart.MaterialApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.rubberduck.materialjumpstart.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/MyMaterialDrawerTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rubberduck.materialjumpstart.activities.DetailsActivity"
            android:label="@string/title_activity_details"
            android:theme="@style/MyTheme"
            android:parentActivityName="com.rubberduck.materialjumpstart.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rubberduck.materialjumpstart.activities.MainActivity" />
        </activity>
    </application>

</manifest>
